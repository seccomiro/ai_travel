<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title text-center mb-4"><%= t('auth.sign_in') %></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
          <div class="mb-3">
            <%= f.label :email, t('auth.email'), class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, t('auth.password'), class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, t('auth.remember_me'), class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit t('auth.sign_in'), class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
