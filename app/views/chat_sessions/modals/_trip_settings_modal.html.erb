<div class="modal fade" id="tripSettingsModal" tabindex="-1" aria-labelledby="tripSettingsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tripSettingsModalLabel"><%= t('trips.settings') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-3">
          <label for="tripTitle" class="form-label"><%= t('trips.title') %></label>
          <input type="text" class="form-control" id="tripTitle" value="<%= trip.title %>">
        </div>
        <div class="mb-3">
          <label for="tripDescription" class="form-label"><%= t('trips.description') %></label>
          <textarea class="form-control" id="tripDescription" rows="3"><%= trip.description %></textarea>
        </div>
        <div class="row">
          <div class="col-md-6">
            <div class="mb-3">
              <label for="startDate" class="form-label"><%= t('trips.start_date') %></label>
              <input type="date" class="form-control" id="startDate" value="<%= trip.start_date&.strftime('%Y-%m-%d') %>">
            </div>
          </div>
          <div class="col-md-6">
            <div class="mb-3">
              <label for="endDate" class="form-label"><%= t('trips.end_date') %></label>
              <input type="date" class="form-control" id="endDate" value="<%= trip.end_date&.strftime('%Y-%m-%d') %>">
            </div>
          </div>
        </div>
        <div class="mb-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="isPublic" <%= 'checked' if trip.is_public %>>
            <label class="form-check-label" for="isPublic">
              <%= t('trips.make_public') %>
            </label>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('actions.cancel') %></button>
        <button type="button" class="btn btn-primary" onclick="saveTripSettings()"><%= t('actions.save') %></button>
      </div>
    </div>
  </div>
</div>
